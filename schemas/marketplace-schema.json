{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Claude Code Plugin Marketplace",
  "description": "Schema for marketplace.json files",
  "type": "object",
  "required": ["name", "owner", "plugins"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$",
      "description": "Marketplace identifier (kebab-case, no spaces)"
    },
    "owner": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Marketplace maintainer name"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "Maintainer email address"
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string",
          "description": "Brief marketplace description"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "description": "Marketplace version"
        },
        "pluginRoot": {
          "type": "string",
          "description": "Base path for relative plugin sources"
        }
      }
    },
    "plugins": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "source"],
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$",
            "description": "Plugin identifier"
          },
          "source": {
            "oneOf": [
              {
                "type": "string",
                "pattern": "^\\./"
              },
              {
                "type": "object",
                "required": ["source"],
                "properties": {
                  "source": {
                    "type": "string",
                    "enum": ["github", "git", "url"]
                  },
                  "repo": {
                    "type": "string",
                    "pattern": "^[^/]+/[^/]+$"
                  },
                  "url": {
                    "type": "string",
                    "format": "uri"
                  }
                }
              }
            ],
            "description": "Plugin source (relative path or source object)"
          },
          "version": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$"
          },
          "description": {
            "type": "string",
            "minLength": 10,
            "maxLength": 500
          },
          "author": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "email": {
                "type": "string",
                "format": "email"
              }
            }
          },
          "repository": {
            "type": "string",
            "format": "uri"
          },
          "license": {
            "type": "string"
          },
          "keywords": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "category": {
            "type": "string"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "strict": {
            "type": "boolean",
            "default": true
          },
          "skills": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Directories containing SKILL.md files"
          }
        }
      }
    }
  },
  "additionalProperties": false
}
