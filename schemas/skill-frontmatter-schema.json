{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Claude Code Skill Frontmatter",
  "description": "Schema for SKILL.md YAML frontmatter",
  "type": "object",
  "required": ["name", "description"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$",
      "maxLength": 64,
      "description": "Skill identifier (lowercase letters, numbers, hyphens only)"
    },
    "description": {
      "type": "string",
      "minLength": 20,
      "maxLength": 1024,
      "description": "Brief description of what the skill does and when to use it"
    },
    "license": {
      "type": "string",
      "description": "License identifier (e.g., MIT, Apache-2.0, Vibecoded)"
    },
    "allowed-tools": {
      "type": "string",
      "pattern": "^[A-Za-z]+(,\\s*[A-Za-z]+)*$",
      "description": "Comma-separated list of allowed tools (e.g., 'Read, Grep, Glob')"
    }
  },
  "additionalProperties": false
}
