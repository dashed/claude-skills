{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Claude Code Plugin Manifest",
  "description": "Schema for plugin.json manifest files",
  "type": "object",
  "required": ["name"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$",
      "maxLength": 64,
      "description": "Plugin identifier (kebab-case, no spaces)"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9.-]+)?(\\+[a-zA-Z0-9.-]+)?$",
      "description": "Semantic version (e.g., 1.0.0, 2.1.0-beta.1)"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "maxLength": 500,
      "description": "Brief explanation of plugin purpose"
    },
    "author": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": ["name"]
    },
    "homepage": {
      "type": "string",
      "format": "uri",
      "description": "Documentation or homepage URL"
    },
    "repository": {
      "type": "string",
      "format": "uri",
      "description": "Source code repository URL"
    },
    "license": {
      "type": "string",
      "description": "SPDX license identifier (e.g., MIT, Apache-2.0)"
    },
    "keywords": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 2,
        "maxLength": 50
      },
      "uniqueItems": true,
      "description": "Tags for plugin discovery"
    },
    "commands": {
      "oneOf": [
        {
          "type": "string",
          "pattern": "^\\./"
        },
        {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^\\./"
          }
        }
      ],
      "description": "Custom command files/directories (relative paths starting with ./)"
    },
    "agents": {
      "oneOf": [
        {
          "type": "string",
          "pattern": "^\\./"
        },
        {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^\\./"
          }
        }
      ],
      "description": "Custom agent files (relative paths starting with ./)"
    },
    "hooks": {
      "oneOf": [
        {
          "type": "string",
          "pattern": "^\\./"
        },
        {
          "type": "object"
        }
      ],
      "description": "Hook config path or inline config"
    },
    "mcpServers": {
      "oneOf": [
        {
          "type": "string",
          "pattern": "^\\./"
        },
        {
          "type": "object"
        }
      ],
      "description": "MCP server config path or inline config"
    }
  },
  "additionalProperties": false
}
